<Window x:Class="PinRef.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:PinRef.ViewModels"
        xmlns:views="clr-namespace:PinRef.Views"
        mc:Ignorable="d"
        Icon="pack://application:,,,/pinref_logo.png"
        Title="PinRef"
        Height="600"
        Width="800"
        MinHeight="200"
        MinWidth="300"
        Topmost="{Binding IsPinned, Mode=OneWay}"
        d:DataContext="{d:DesignInstance Type=vm:MainViewModel}"
        KeyDown="OnKeyDown"
        Loaded="OnLoaded">

    <Window.Resources>
        <FontFamily x:Key="SegoeFluentIcons">pack://application:,,,/Fonts/#Segoe Fluent Icons</FontFamily>
    </Window.Resources>

    <Window.InputBindings>
        <KeyBinding Key="Delete" Command="{Binding RemoveSelectedImageCommand}"/>
        <KeyBinding Key="Escape" Command="{Binding DeselectAllCommand}"/>
        <KeyBinding Key="D0" Modifiers="Control" Command="{Binding ResetCanvasCommand}"/>
    </Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
              Height="40"
              Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
              Visibility="{Binding IsPinned, Converter={StaticResource BoolToVis}, ConverterParameter=Invert}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        Margin="4">
                <TextBlock x:Name="ZoomDisplay"
                           VerticalAlignment="Center"
                           Margin="8,0"
                           Opacity="0.6">
                    <Run Text="Zoom: "/>
                    <Run Text="{Binding ZoomScale, StringFormat=P0, Mode=OneWay}"/>
                </TextBlock>

                <Button x:Name="ResetCanvasButton"
                        Content="Reset"
                        Command="{Binding ResetCanvasCommand}"
                        Margin="4,0"
                        Padding="8,4"/>

                <Button x:Name="PinButton"
                        Command="{Binding TogglePinCommand}"
                        Margin="4,0"
                        Padding="8,4"
                        ToolTip="Pin window on top (hides title bar)">
                    <StackPanel Orientation="Horizontal">
                        <Grid Margin="0,0,4,0">
                            <TextBlock FontFamily="{StaticResource SegoeFluentIcons}"
                                       Text="&#xE841;"
                                       FontSize="16"
                                       Foreground="{DynamicResource AccentBrush}"/>
                            <TextBlock FontFamily="{StaticResource SegoeFluentIcons}"
                                       Text="&#xE718;"
                                       FontSize="16"/>
                        </Grid>
                        <TextBlock Text="Pin" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <Border Grid.Row="1"
                x:Name="CanvasBorder"
                ClipToBounds="True"
                Background="Transparent"
                AllowDrop="True"
                DragOver="OnDragOver"
                Drop="OnDrop"
                MouseWheel="OnMouseWheel"
                MouseDown="OnCanvasMouseDown"
                MouseMove="OnCanvasMouseMove"
                MouseUp="OnCanvasMouseUp">

            <Canvas x:Name="ImageCanvas"
                    
                    RenderTransformOrigin="0,0">
                <Canvas.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="{Binding ZoomScale}"
                                        ScaleY="{Binding ZoomScale}"/>
                        <TranslateTransform X="{Binding PanOffsetX}"
                                            Y="{Binding PanOffsetY}"/>
                    </TransformGroup>
                </Canvas.RenderTransform>

                <ItemsControl ItemsSource="{Binding Images}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Canvas.Left" Value="{Binding X}"/>
                            <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                            <Setter Property="Panel.ZIndex" Value="{Binding ZIndex}"/>
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type vm:CanvasImageViewModel}">
                            <views:CanvasImageControl AutomationProperties.AutomationId="CanvasImage"
                                                       Width="{Binding Width}"
                                                       Height="{Binding Height}"
                                                       MouseLeftButtonDown="OnImageMouseDown"
                                                       MouseLeftButtonUp="OnImageMouseUp"
                                                       MouseMove="OnImageMouseMove"
                                                       Cursor="SizeAll">
                                <views:CanvasImageControl.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Bring to Front" Click="OnBringToFrontClick"/>
                                        <MenuItem Header="Send to Back" Click="OnSendToBackClick"/>
                                        <Separator/>
                                        <MenuItem Header="Remove" Click="OnRemoveImageClick"/>
                                    </ContextMenu>
                                </views:CanvasImageControl.ContextMenu>
                            </views:CanvasImageControl>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Canvas>
        </Border>

        <Button x:Name="UnpinButton"
                Grid.Row="1"
                Command="{Binding TogglePinCommand}"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="8"
                Padding="12,6"
                Opacity="0.7"
                ToolTip="Unpin window"
                Visibility="{Binding IsPinned, Converter={StaticResource BoolToVis}}">
            <StackPanel Orientation="Horizontal">
                <Grid Margin="0,0,4,0">
                    <TextBlock FontFamily="{StaticResource SegoeFluentIcons}"
                               Text="&#xE842;"
                               FontSize="16"
                               Foreground="{DynamicResource AccentBrush}"/>
                    <TextBlock FontFamily="{StaticResource SegoeFluentIcons}"
                               Text="&#xE77A;"
                               FontSize="16"/>
                </Grid>
                <TextBlock Text="Unpin" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>

        <TextBlock x:Name="DropHintText"
                   Grid.Row="1"
                   Text="Drop images here"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="18"
                   Opacity="0.3"
                   IsHitTestVisible="False"
                   Visibility="{Binding HasNoImages, Converter={StaticResource BoolToVis}}"/>
    </Grid>
</Window>
