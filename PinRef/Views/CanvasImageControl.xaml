<UserControl x:Class="PinRef.Views.CanvasImageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:PinRef.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:CanvasImageViewModel}">
    <Grid>
        <Image Source="{Binding ImageSource}"
               Stretch="Fill"
               RenderOptions.BitmapScalingMode="HighQuality"/>

        <Border BorderThickness="2"
                BorderBrush="#0078D4"
                Visibility="{Binding IsSelected, Converter={StaticResource BoolToVis}}"/>

        <Canvas Visibility="{Binding IsSelected, Converter={StaticResource BoolToVis}}">
            <Thumb x:Name="TopLeftHandle"
                   Style="{StaticResource ResizeHandleStyle}"
                   Cursor="SizeNWSE"
                   Canvas.Left="-5"
                   Canvas.Top="-5"
                   DragDelta="OnResizeTopLeft"/>

            <Thumb x:Name="TopRightHandle"
                   Style="{StaticResource ResizeHandleStyle}"
                   Cursor="SizeNESW"
                   Canvas.Right="-5"
                   Canvas.Top="-5"
                   DragDelta="OnResizeTopRight"/>

            <Thumb x:Name="BottomLeftHandle"
                   Style="{StaticResource ResizeHandleStyle}"
                   Cursor="SizeNESW"
                   Canvas.Left="-5"
                   Canvas.Bottom="-5"
                   DragDelta="OnResizeBottomLeft"/>

            <Thumb x:Name="BottomRightHandle"
                   Style="{StaticResource ResizeHandleStyle}"
                   Cursor="SizeNWSE"
                   Canvas.Right="-5"
                   Canvas.Bottom="-5"
                   DragDelta="OnResizeBottomRight"/>
        </Canvas>
    </Grid>
</UserControl>
